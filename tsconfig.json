{
  "extends": "./tsconfig.base.json",
  "include": ["./**/*.js", "./**/*.ts"],
  "exclude": ["./static/**/*", "./node_modules/**/*"],
  "compilerOptions": {
    "types": ["bun-types"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "skipLibCheck": true // needed to avoid conflicts with bun-types and @types/node
  }
}
