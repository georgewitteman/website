{
  "name": "website",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "main": "./dist/server.ts",
  "scripts": {
    "watch": "concurrently --prefix-colors auto bun:watch:*",
    "build": "bun run build:css",
    "build:css": "tailwindcss -i ./src/styles.css -o ./static/styles.css --minify",
    "watch:css": "tailwindcss -i ./src/styles.css -o ./static/styles.css --watch",
    "watch:server": "bun run --hot ./src/server.ts",
    "lint": "concurrently --prefix-colors auto bun:lint:*",
    "lint:prettier": "prettier --check .",
    "lint:tsc": "tsc",
    "lint:tsc-static": "cd ./static && tsc",
    "prettier:fix": "prettier --write .",
    "lint-old": "bun run tasks.ts lint",
    "ncu": "bunx npm-check-updates",
    "deploy": "bun tasks.ts deploy"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/georgewitteman/website.git"
  },
  "author": "George Witteman",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/georgewitteman/website/issues"
  },
  "homepage": "https://github.com/georgewitteman/website#readme",
  "devDependencies": {
    "@aws-sdk/client-ecr": "^3.454.0",
    "@aws-sdk/client-ecs": "^3.454.0",
    "@total-typescript/ts-reset": "^0.5.1",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/nunjucks": "^3.2.6",
    "@types/pg": "^8.10.9",
    "bun-types": "^1.0.13",
    "concurrently": "^8.2.2",
    "prettier": "^3.1.0",
    "prettier-plugin-tailwindcss": "^0.5.7",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "@aws-sdk/rds-signer": "^3.454.0",
    "@godaddy/terminus": "^4.12.1",
    "@tailwindcss/forms": "^0.5.7",
    "bowser": "^2.11.0",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "nunjucks": "^3.2.4",
    "path-to-regexp": "^6.2.1",
    "pg": "^8.11.3",
    "safe-stable-stringify": "^2.4.3",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  }
}
